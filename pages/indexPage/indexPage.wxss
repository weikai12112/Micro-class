/* pages/indexPage/indexPage.wxss */
@import "../../myfont.wxss";
page{
  height: 100%;
  background-color: #f7f7f7;
}
.navbar{
  background-color: #0cc15a;
  width: 100%;
  color: white;
}
.title{
  width: 25%;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.classes{
  display: flex;
  background-color: #f7f7f7;
  justify-content: space-between;
  padding: 20px;
  flex-wrap: wrap;


}
.class{
  width: 48%;
  height: 170px;
  border-radius: 7px;
  overflow: hidden;
  background-color:white; 
  margin-bottom: 10px;
}
.classImage{
  width: 100%;
  height: 120px;
  overflow: hidden;
}
.classImage>image{
  width: 100%;
  height: 120px;

}
.classTitle{
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding: 4px;
}
.classTeacher{
  color: gray;
  font-size: 12px;
  padding-left: 4px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.select{
  width: 55px;
  background-color: #0cc15a;
  color: white;
  height: 15px;
  padding: 10px;
  border-radius: 8px;
  margin-left: 10px;
  margin-top: 5px;
}
.select>view{
  float: left;
  line-height: 15px;
}
.select>image{
  width: 18px;
  height: 18px;
  margin-left: 5px;
}
.select:hover{
  background-color: #099f49;
}
.gradeNavs{
  display: flex;
}
.gradeNav{
  width: 25%;
  text-align: center;
  line-height: 40px;

}
.selectGradeNav{
  width: 25%;
  text-align: center;
  border-bottom: 2px solid #0cc15a;
  line-height: 40px;

}