/* pages/classUp/classUp.wxss */
@import "../../myfont.wxss";
.navbar{
  background-color: #0cc15a;
  width: 100%;
  color: white;
  margin-bottom: 20px;

}
.title{
  width: 25%;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
}
.back>image{
  width: 30px;
  height: 20px;
}
.back{
  position: absolute;
  margin-left: 20px;
}
.infoWrite{
  display: flex;
  padding-right: 20px;
  margin-bottom: 10px;
}
.infoWrite>view:nth-child(1){
  width: 30%;
  text-align: right;
  line-height: 36px;
  padding-right: 10px;
}
.infoWrite>input:nth-child(2){
  width: 55%;
  border: 1px solid #0cc15a;
  border-radius: 5px;
  margin-top: 3px;
  padding: 3px;
}
.infoWrite>i{
  width: 55%;
  border: 1px solid #0cc15a;
  border-radius: 5px;
  margin-top: 3px;
  padding: 3px;
  line-height: 25px;

}
.infoWrite>view:nth-child(3){
  width: 10%;
  line-height: 36px;
  text-align: center;
}
.textClass{
  width: 75%;
  height: 200px;
  border: 1px solid #0cc15a;
  border-radius: 5px;
  margin-top: 3px;
  padding: 3px;
  left: 0;
  right: 0;
  margin: auto;
}
.send{
  width: 90%;
  line-height: 30px;
  text-align: center;
  color: white;
  background-color: #57b82a;
  border-radius: 30px;
  left: 0;
  right: 0;
  margin: auto;
  margin-top: 80px;
}